        <servlet-name>BookStoreShop</servlet-name>
        <url-pattern>/updateorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookStoreSetting</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookStoreSetting</servlet-name>
        <url-pattern>/createpdfdoc</url-pattern>
    </servlet-mapping>
