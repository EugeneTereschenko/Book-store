        <servlet-name>BookStoreSetting</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <context-param>
    <description>Location to store uploaded file</description>
        <param-name>fileuploadto</param-name>
        <param-value>/home/yevhen/IdeaProjects/BookStore/web/images/user</param-value>
    </context-param>
    <servlet>
        <servlet-name>BookSendMAIL</servlet-name>
        <servlet-class>com.shop.SendMail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookSendMAIL</servlet-name>
        <url-pattern>/sendmailuserregister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookSendMAIL</servlet-name>
        <url-pattern>/sendmailcartid</url-pattern>
    </servlet-mapping>
</web-app>